.goods-card__body {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f3f3f3;
}

.goods-card__thumb {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.goods-card__img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.goods-card__content {
  flex: 1;
  min-width: 0; /* 防止内容溢出 */
  margin-right: 20rpx;
}

.goods-card__add-cart {
  flex-shrink: 0;
}

/* 调整原有样式 */
.goods-card__title {
  min-width: 400rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  font-weight: 500;
}

.goods-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
  font-size: 28rpx;
  color: rgba(51, 94, 247, 1);
}
.goods-card__tag{
  background-color: rgba(51, 94, 247, 0.15);
  padding: 5rpx 10rpx;
  border-radius: 3px;
}
.timeIcon{
  display: inline-block;
  height: 35rpx;
  vertical-align: middle;
}

.goods-card__down {
  margin-top: 5rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: rgba(104, 101, 110, 1);
}

.number{
  font-size: 36rpx;
  color: rgba(51, 94, 247, 1);
}
.locationIcon{
  display: inline-block;
  height: 35rpx;
  vertical-align: middle;
}
.adress{
  display: inline-block;
  padding-left:25rpx ;
}