.goods-card__body {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f3f3f3;
}

.goods-card__thumb {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.goods-card__img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.goods-card__content {
  flex: 1;
  min-width: 0; /* 防止内容溢出 */
  margin-right: 20rpx;
}

.goods-card__add-cart {
  flex-shrink: 0;
}

/* 调整原有样式 */
.goods-card__title {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.goods-card__down {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}