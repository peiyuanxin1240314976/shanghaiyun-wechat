  z-index: 11700 !important;
}
.t-dropdown-item__body{
  padding: 10rpx;
}

.areaPicker .t-overlay{
  top: 390px !important;
}


.footer{
  height: 300rpx;
}

.flexBetween{
  display: flex;
  justify-content: space-between;
}

.flexCenter{
	display: flex;
	justify-content: center;
}