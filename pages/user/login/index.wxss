/* pages/login/login.wxss */
.wechat-login {
  padding: 36rpx 26rpx;
  background-color: #fff;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.login-image {
  margin-bottom: 100rpx;
}

.description {
  text-align: center;
  margin-bottom: 50rpx;
}

.msg1 {
  font-size: 28rpx;
  display: block;
  margin-bottom: 40rpx;
  font-weight: 600;
}

.msg2 {
  font-size: 28rpx;
  color: #68656E;
  display: block;
}
.t-checkbox__title {
  color: rgba(31, 35, 43, 1) !important;
}
.t-checkbox__icon--checked {
  color: #1989fa !important;
}

.t-checkbox {
  font-size: 28rpx !important;
  color: rgba(31, 35, 43, 1) !important;
}
.agreement {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx !important;
}

.link {
  color: #1989fa;
  text-decoration: underline;
  font-size: 28rpx !important;
}

.privacy-link {
  margin-top: 20rpx;
}

/* 适配 TDesign 按钮样式 */
.t-button--primary {
  background-color: rgba(51, 94, 247, 1) !important;
  border-color: rgba(51, 94, 247, 1) !important;
}
.mt2{
  margin-top: 20rpx;
}