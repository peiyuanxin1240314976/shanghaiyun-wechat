.privacy-container {
  padding: 20rpx 30rpx;
  color: #333;
  line-height: 1.6;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.update-date {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 28rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.section-content {
  white-space: pre-line;
  display: block;
}