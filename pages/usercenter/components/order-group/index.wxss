.order-group {
  margin-bottom: 24rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
}

.order-group__content {
  overflow: hidden;
  width: 100%;
  height: 164rpx;
  display: flex;
}
.order-group__item {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  position: relative;
}

.order-group__item::after{
  position: absolute;
  right: 0;
  height: 50rpx;
  width: 1px;
  content: "";
  background: #dddddd;
}

.order-group__item:last-child::after {
  width:0;
}
.order-group__item__title {
  font-size: 24rpx;
  color: #666;
  line-height: 32rpx;
}

.statisticsText{
  font-weight: 600;
}

