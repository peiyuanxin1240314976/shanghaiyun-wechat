page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.home-page-header {
  background: #fff;
}

.home-page-container {
  background: #ffffff;
}

.home-page-container,
.home-page-header {
  display: block;
  padding: 0 24rpx;
}

/* 外层容器 */
.search-container {
  padding: 10rpx 0;
  background: #fff;
}

/* 内容区域 */
.search-content {
  display: flex;
  align-items: center;  /* 垂直居中 */
  justify-content: space-between;  /* 左右分开 */
}

/* 左侧实时更新 */
.update-section {
  flex-shrink: 0;  /* 防止被压缩 */
  margin-right: 30rpx;  /* 与搜索框间距 */
}

.update-text {
  font-size: 28rpx;
  color: var(--td-text-color-primary);
  line-height: 1.5;  /* 保持垂直居中 */
}

/* 右侧搜索框 */
.search-section {
  flex: 1;  /* 占据剩余空间 */
  max-width: 550rpx;  /* 防止过宽 */
}

/* 调整 TDesign 搜索组件样式 */
.t-search__input-container {
  height: 64rpx !important;
  background: #f5f5f5 !important;
  border-radius: 5rpx !important;
}

.t-search__input {
  font-size: 26rpx !important;
}

